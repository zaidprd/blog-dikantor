---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import Pagination from "@/layouts/components/Pagination.astro";
import Post from "@/layouts/partials/Post.astro";
// Hapus import MDX lama: getSinglePage, getEntry, CollectionEntry, sortByDate

import { client } from "@/lib/sanityClient"; // <-- Import Klien Sanity Aman
import { markdownify, plainify } from "@/lib/utils/textConverter";

// ðŸ‘‘ QUERY GROQ UNTUK DAFTAR ARTIKEL (RINGAN & SEO)
const LIST_QUERY = `
*[_type == "post" && defined(slug.current) && publishedAt < now()] 
| order(publishedAt desc) {
  _id,
  title,
  "slug": slug.current,
  publishedAt,
  
  // Data untuk tampilan card:
  "summary": array::join(string::split(pt::text(body), "")[0..200], "") + "...",
  "imageUrl": mainImage.asset->url,
  
  categories[]->{title, "slug": slug.current},
}`;

const { summary_length } = config.settings;

// 1. Fetch semua post dari Sanity
const allPosts = await client.fetch(LIST_QUERY);

// Asumsi: Kita hanya menggunakan "Blog" sebagai judul utama
const blogTitle = "Blog"; 

// 2. Kalkulasi Pagination & Post yang ditampilkan
const totalPages = Math.ceil(allPosts.length / config.settings.pagination);
const currentPosts = allPosts.slice(0, config.settings.pagination);

// 3. Ambil Featured Post (post pertama)
const featuredPost = currentPosts[0];
const remainingPosts = currentPosts.slice(1);
---

<Base title={blogTitle}>
  <section class="section">
    <div class="container">
      <h1
        class="text-center font-normal lg:text-[56px]"
        set:html={markdownify(blogTitle)}
      />
      
      {/* ======================================================= */}
      {/* ðŸŽ¯ BAGIAN 1: FEATURED POST (Artikel Paling Baru) */}
      {/* ======================================================= */}
      {featuredPost && (
        <div class="row pb-12">
          <div class="row col-12 pb-24 pt-16">
            <div class="md:col-6">
              {
                featuredPost.imageUrl && (
                  <img
                    class="rounded-lg w-full h-auto"
                    src={featuredPost.imageUrl} // <-- Menggunakan imageUrl Sanity
                    alt={featuredPost.title}
                    width={925}
                    height={475}
                  />
                )
              }
            </div>
            <div class="md:col-6">
              <h2 class="h3 mb-2 mt-4">
                <a
                  href={`/blog/${featuredPost.slug}`} // <-- Menggunakan slug Sanity
                  class="block hover:text-primary"
                >
                  {featuredPost.title}
                </a>
              </h2>
              <p
                // Menggunakan summary dari Sanity
                set:html={plainify(featuredPost.summary.slice(0, summary_length))}
              />
              <a
                class="btn btn-primary mt-4"
                href={`/blog/${featuredPost.slug}`} // <-- Menggunakan slug Sanity
                rel=""
              >
                Read More
              </a>
            </div>
          </div>
        </div>
      )}
      
      {/* ======================================================= */}
      {/* ðŸŽ¯ BAGIAN 2: DAFTAR ARTIKEL LAINNYA */}
      {/* ======================================================= */}
      <div class="row">
        {
          remainingPosts.map((post) => (
            <div class="col-12 mb-8 sm:col-6 lg:col-4">
              {/* post sekarang adalah objek Sanity, bukan MDX CollectionEntry */}
              <Post post={post} /> 
            </div>
          ))
        }
      </div>

      {/* ======================================================= */}
      {/* ðŸŽ¯ BAGIAN 3: PAGINATION */}
      {/* ======================================================= */}
      <Pagination section={"blog"} currentPage={1} totalPages={totalPages} />
    </div>
  </section>
</Base>