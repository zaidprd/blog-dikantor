---
// --- AWAL FRONMATTER (Harus ada di Baris Paling Atas) ---
// Bagian ini hanya untuk Import (JavaScript)

import { nav_button, site } from "@/config/config.json"; // Tambahkan 'site' di sini
import menu from "@/config/menu.json";

const pathname = Astro.url.pathname;
const { logo, logo_text } = site; // Ambil path dan alt teks logo dari config

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { main }: { main: NavigationLink[] } = menu;
// --- AKHIR FRONMATTER ---
---

<header id="main-header" class="header fixed w-full top-0 z-50 transition-all duration-300 initial-header-style">
  <nav class="navbar container">
        <div class="order-0">
      <a href="/">
          <img id="header-logo" src={logo} alt={logo_text} class="transition-all duration-300 ease-in-out" />
      </a>
    </div>
        <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      id="show-button"
      for="nav-toggle"
      class="order-2 flex cursor-pointer items-center md:order-1 md:hidden"
    >
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
    </label>
    <label
      id="hide-button"
      for="nav-toggle"
      class="order-2 cursor-pointer items-center md:order-1"
    >
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon
          points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
          transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>
        <ul
      id="nav-menu"
      class="navbar-nav order-3 hidden w-full md:order-1 md:flex md:w-auto md:space-x-3"
    >
      {
        main.map((menu) => (
          <>
            {menu.hasChildren ? (
              <li class="nav-item nav-dropdown group relative">
                <span class="nav-link inline-flex items-center">
                  {menu.name}
                  <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </span>
                <ul class="nav-dropdown-list hidden group-hover:block md:invisible md:absolute md:block md:opacity-0 md:group-hover:visible md:group-hover:opacity-100">
                  {menu.children?.map((child) => (
                    <li class="nav-dropdown-item">
                      <a
                        href={child.url}
                        class={`nav-dropdown-link block ${
                          pathname === child.url && "nav-link-active"
                        }`}
                      >
                        {child.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="nav-item">
                <a
                  href={menu.url}
                  class={`nav-link block ${
                    pathname === menu.url && "nav-link-active"
                  }`}
                >
                  {menu.name}
                </a>
              </li>
            )}
          </>
        ))
      }
      {
        nav_button.enable && (
          <div class="block md:hidden">
            <a
              class="btn btn-primary z-0 ml-auto py-[14px]"
              href={nav_button.link}
            >
              {nav_button.label}
            </a>
          </div>
        )
      }
    </ul>
    {
      nav_button.enable && (
        <div class="order-1 ml-auto hidden items-center md:order-2 md:ml-0 md:flex md:min-w-[150px] lg:min-w-[200px]">
          <a
            class="btn btn-primary z-0 ml-auto py-[14px]"
            href={nav_button.link}
          >
            {nav_button.label}
          </a>
        </div>
      )
    }
  </nav>
</header>
<div class="pt-[90px] md:pt-[100px]"></div>

<style>
  /* 1. Styling Logo dan Header Awal */
  .initial-header-style {
      /* Padding awal yang sedikit lebih besar */
      padding: 20px 0; 
      background-color: #ffffff;
  }
  
  #header-logo {
    /* UKURAN LOGO SAAT DI POSISI ATAS (Normal) */
    height: 60px; /* <-- Atur ukuran yang lebih besar di sini */
    width: auto;
  }

  /* 2. Styling Efek Scroll (Class yang di-toggle JS) */
  .scrolled-header {
    /* Header mengecil & Transparan */
    padding: 10px 0;
    background-color: rgba(255, 255, 255, 0.95); /* Transparan */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }
  
  .scrolled-header #header-logo {
    /* UKURAN LOGO SAAT DI-SCROLL */
    height: 40px; /* <-- Atur ukuran logo saat mengecil di sini */
  }
</style>

<script is:inline>
  // Script untuk mendeteksi scroll dan mengubah class
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('main-header');
    const scrollThreshold = 100; // Jarak gulir (dalam piksel) sebelum efek diterapkan

    function handleScroll() {
      if (window.scrollY > scrollThreshold) {
        // Jika sudah menggulir sejauh 100px
        header.classList.add('scrolled-header');
        header.classList.remove('initial-header-style'); 
      } else {
        // Jika kembali ke atas
        header.classList.remove('scrolled-header');
        header.classList.add('initial-header-style'); 
      }
    }

    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Panggil sekali saat dimuat
  });
</script>